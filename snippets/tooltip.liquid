{% comment %}
  Tooltip Snippet
  Usage Example:
  {% render 'tooltip', tooltip: 'This is a tooltip', isMandatory: true, isError: true %}
{% endcomment %}

<span
  class="
    absolute text-xs text-white px-2 py-1 rounded shadow-md z-9999
    {% if isMandatory %} opacity-100 top-[110%] left-1/2 translate-x-1/2
    {% else %} opacity-0 scale-95 transition-all duration-300 transform -translate-y-2 group-hover:opacity-100 group-hover:scale-100 group-hover:translate-y-0 top-[110%] left-1/2 translate-x-1/2
    {% endif %}
    {% if isError %} bg-red-500
    {% else %} bg-secondary
    {% endif %}
  "
>
  {{ tooltip }}
</span>
